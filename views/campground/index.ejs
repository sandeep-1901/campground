<% layout('layouts/boilerplate') %>

    <h1>All Campground</h1>
    <ul>
        <% for(let camp of campground ) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="rounded mx-auto d-block mt-3 mb-3 mx-3" style="height: 300px; width: 300px;"
                            src="<%= camp.image%>" alt="sorry">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-description">
                                <%= camp.description %>
                            </p>
                            <p class="card-text ">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/campground/<%= camp._id%> " role="button">View <%=
                                    camp.title %></a>

                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>
   